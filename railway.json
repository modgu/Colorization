{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["python312", "libglvnd", "glib", "libxkbcommon", "libxcb"]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn main:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
