{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "python312",
            "libglvnd",
            "mesa",
            "glib",
            "xorg.libX11",
            "xorg.libXext",
            "xorg.libXrender"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "gunicorn main:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
